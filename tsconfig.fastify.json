{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/fastify",
    "rootDir": "./src/fastify",
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/fastify/**/*"],
  "exclude": ["node_modules", "dist"]
}
